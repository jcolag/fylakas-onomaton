<p id="notice"><%= notice %></p>

<h1>Activations</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Device info</th>
      <th>Activated</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activations.each do |activation| %>
      <tr>
        <td><%= activation.device_info %></td>
        <td><%= activation.created_at.to_formatted_s(:long) %></td>
        <td><%= link_to 'Destroy', activation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activation', new_activation_path %>
